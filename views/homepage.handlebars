<div class="columns is-centered">
  <div class="column tile is-parent is-half">
    <article class="tile is-child notification">
      <p class="title has-text-centered"> Join Our Community</p>
      <p class="subtitle has-text-centered">Form for <em>Car Enthusiasts</em></p>
      <hr class="has-background-info">
      <div class="content has-text-centered">
       We talk everything tech, you'll find out about all the new and current tech here!
        <br>
        <br>
      </div>
      <div class="column is-centered">
        <p class="has-text-centered ">
          <span class="icon is-small is-left">
            <i class="fad fa-pen-square"></i>
          </span>
          {{posts.length}}
          <br>
        </p>
      </div>
  </div>
  </article>
</div>
<ol class="post-list">
  {{#each posts as |post|}}
  <ul>
    {{> post-info post }}
  </ul>
  {{/each}}
